modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WikiWatch Streamlit Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WikiWatch Backend Server"

[[workflows.workflow]]
name = "WikiWatch Streamlit Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd wiki_watch && streamlit run frontend.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "WikiWatch Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd wiki_watch && python -m uvicorn simple_backend:app --host 0.0.0.0 --port 8000"
waitForPort = 8000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
